@model TestAsp.NetCoreMvc.Models.Phone
@{ 
    ViewBag.Title = "Редактирование смартфона";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Name" class="control-label"> Название </label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"> Компания </label>
            <input type="text" asp-for="Company" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"> Цена </label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
</body>
</html>
